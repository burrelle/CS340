<!-- Insert a team -->
<form action="/teams-insert" method="get">
  <fieldset>
    <legend>
      Add a team
    </legend>
    <label>City: </label>
    <input type="text" name="city" required />
    <label>Mascot: </label>
    <input type="text" name="mascot" required />
    <label>Stadium: </label>
    <input type="text" name="stadium" required />
    <input type="submit" id="teamSubmit"/>
  </fieldset>
</form>

<!-- Insert a positionGroup -->
<form action="/positionGroup-insert" method="get">
  <fieldset>
    <legend>
      Add a Position Group
    </legend>
    <label>Position Group: </label>
    <input type="text" name="positionGroup" />
    <input type="submit" id="positionGroupSubmit" href="/insert" />
  </fieldset>
</form>

<form action="/positions-insert" method="get">
  <fieldset>
    <legend>
      Add a position
    </legend>
    <label>Position Group</label>
    <select name = "positionGroup">
      {{#each positionGroup}}
      <option value="{{inc @index}}">{{this.positionGroup}}</option>
      {{/each}}
    </select>
    <label>Position: </label>
    <input type="text" name="position" />
    <input type="submit" id="positionSubmit" />
  </fieldset>
</form>

<form action="/player-insert" method="get">
  <fieldset>
    <legend>
    Add a player
    </legend>
    <label>Player Number: </label>
    <input type="number" name="pNumber" />
    <label>First Name: </label>
    <input type="text" name ="firstName" />
    <label>Last Name: </label>
    <input type="text" name="lastName" />
    <label>Age: </label>
    <input type="number" name="age" />
    <label>Team: </label>
    <select name ="mascot">
      {{#each teams}}
      <option value="{{inc @index}}">{{this.mascot}}</option>
      {{/each}}
    </select>
    <label>Position Group</label>
    <select name="positionGroup">
      {{#each positionGroup}}
      <option value="{{inc @index}}">{{this.positionGroup}}</option>
      {{/each}}
    </select>
    <select name="position">
      {{#each positions}}
      <option value="{{inc @index}}">{{this.position}}</option>
      {{/each}}
    </select>
    <input type="submit" id="playerSubmit" />
  </fieldset>
</form>

