<!-- Insert a team -->
<form action="/teams-insert" method="get">
  <fieldset>
    <legend>
      Add a team:
    </legend>
    <label>City: </label>
    <input type="text" name="city" required />
    <label>Mascot: </label>
    <input type="text" name="mascot" required />
    <label>Stadium: </label>
    <input type="text" name="stadium" required />
    <input type="submit" id="teamSubmit" href="/teams" />
  </fieldset>
</form>

